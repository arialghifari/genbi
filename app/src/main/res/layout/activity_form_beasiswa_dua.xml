<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormBeasiswaDua">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:paddingVertical="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_arrow_blue" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="GENBI"
                android:textAlignment="textEnd"
                android:textColor="@color/blue"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FORM PENDAFTARAN BEASISWA BI"
                android:textAlignment="textEnd"
                android:textColor="@color/blue"
                android:textSize="14sp" />
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/relativeLayout">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingHorizontal="40dp"
            android:paddingTop="30dp"
            android:paddingBottom="150dp">

            <TextView
                android:id="@+id/btnPasFoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_small"
                android:backgroundTint="@color/blue"
                android:drawableEnd="@drawable/ic_clip"
                android:gravity="center_vertical"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:text="Pas Foto"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/btnKTP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/rounded_small"
                android:backgroundTint="@color/blue"
                android:drawableEnd="@drawable/ic_clip"
                android:gravity="center_vertical"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:text="KTP"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/btnKK"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/rounded_small"
                android:backgroundTint="@color/blue"
                android:drawableEnd="@drawable/ic_clip"
                android:gravity="center_vertical"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:text="KK"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/btnTranskripNilai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/rounded_small"
                android:backgroundTint="@color/blue"
                android:drawableEnd="@drawable/ic_clip"
                android:gravity="center_vertical"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:text="Transkrip Nilai"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/btnKHS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/rounded_small"
                android:backgroundTint="@color/blue"
                android:drawableEnd="@drawable/ic_clip"
                android:gravity="center_vertical"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:text="KHS"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/btnSKBeasiswa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/rounded_small"
                android:backgroundTint="@color/blue"
                android:drawableEnd="@drawable/ic_clip"
                android:gravity="center_vertical"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:text="Surat Ket Beasiswa"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/btnSKTM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/rounded_small"
                android:backgroundTint="@color/blue"
                android:drawableEnd="@drawable/ic_clip"
                android:gravity="center_vertical"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:text="Surat Ket Tidak Mampu"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/btnSertifikat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/rounded_small"
                android:backgroundTint="@color/blue"
                android:drawableEnd="@drawable/ic_clip"
                android:gravity="center_vertical"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:text="Sertifikat"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/btnMotivationLetter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/rounded_small"
                android:backgroundTint="@color/blue"
                android:drawableEnd="@drawable/ic_clip"
                android:gravity="center_vertical"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:text="Motivation Letter"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@drawable/rounded"
                android:backgroundTint="@color/blue"
                android:fontFamily="sans-serif-medium"
                android:paddingHorizontal="50dp"
                android:paddingVertical="16dp"
                android:text="Submit"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:paddingVertical="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/btnHome"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginEnd="65dp"
            app:srcCompat="@drawable/ic_home" />

        <ImageView
            android:id="@+id/btnBeasiswa"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="65dp"
            app:srcCompat="@drawable/ic_beasiswa" />

        <ImageView
            android:id="@+id/btnPengumuman"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="65dp"
            app:srcCompat="@drawable/ic_mail" />

        <ImageView
            android:id="@+id/btnProfile"
            android:layout_width="26dp"
            android:layout_height="26dp"
            app:srcCompat="@drawable/ic_profile" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>